@page "/person/edit/{PersonId:int}"

<h3>Edit Person</h3>

@if (Person != null)
{
    <PersonForm Person="@Person" submitted="Edit"></PersonForm>   
}


@code
{
    [Parameter] public int PersonId { get; set; }
    Person Person;
    
    protected override void OnInitialized()
    {
        Person = new Person() {Name = "Cato", DateOfBirth = DateTime.Now, Biography = "something"};
    }

    private void Edit()
    {
        Console.WriteLine("Editing person...");
    }
}