

<EditForm Model="Genre" OnValidSubmit="rueckmeldung">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText Class="form-control" @bind-Value="@Genre.Name"/>
            <ValidationMessage For="@(() => Genre.Name)"></ValidationMessage>
        </div>
    </div>
    <button class="btn btn-success" type="submit">Save changes</button>

</EditForm>

@code
{
    [Parameter] public Genre Genre { get; set; }
    [Parameter] public EventCallback rueckmeldung { get; set; }
}